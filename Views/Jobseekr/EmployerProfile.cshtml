@model Jobseekr.Models.EmployerLogin

@{
    ViewBag.Title = "My Profile";
}

<!DOCTYPE html>
<html class="no-js" lang="zxx">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title></title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" type="image/x-icon" href="assets/images/favicon.svg" />
</head>

<body>
    <div id="loading-area"></div>
    <!-- Start Header Area -->
    <header class="header other-page">
        <div class="navbar-area">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-expand-lg">
                            <a class="navbar-brand logo" href="/Jobseekr/WelcomePage">
                                <img class="logo1" src="~/assets/images/logo/logo.jpg" alt="Logo" />
                            </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse"
                                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                                <ul id="nav" class="navbar-nav ml-auto">
                                    <li class="nav-item">
                                        <a href="@Url.Action("Create", "Jobseekr")">Post Job</a>

                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("EmployerProfile", "Jobseekr")" class="active">My Profile</a>

                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("ViewProfile", "Jobseekr")">My Companies</a>

                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("AllCompanyProfiles", "Jobseekr")">All Companies</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href=@Url.Action("ViewJobApplications", "Jobseekr")>Job Applications</a>

                                    </li>
                                    <li class="nav-item">
                                        <a href=@Url.Action("ViewEmployeeReviews", "Jobseekr")>Employee Reviews</a>

                                    </li>

                                </ul>
                            </div>
                            <!-- navbar collapse -->
                            <div class="button">
                                <a href="@Url.Action("Logout", "Jobseekr")" data-toggle="modal" data-target="@Url.Action("Logout", "Jobseekr")" class="login">
                                    <i class="lni lni-exit"></i> Logout
                                </a>
                            </div>
                        </nav>
                        <!-- navbar -->
                    </div>
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
        <!-- navbar area -->
    </header>
    <!-- End Header Area -->
    <!-- Start Employer My Profile Area -->
    <section id="contact-us" class="contact-us section">
        <div class="container">
            <div class="contact-head wow fadeInUp" data-wow-delay=".4s">
                <div class="row">
                    <div class="col-lg-5 col-12">
                        <div class="single-head">
                            <div class="contant-inner-title">
                                <h4>My Profile</h4>
                                <p>Hello Employer, this is your profile.</p>
                            </div>
                            <div class="single-info">
                                <h4 style="margin-left:-30px">@Model.FirstName @Model.LastName </h4>
                            </div>
                            <div class="single-info">
                                <i class="lni lni-phone"></i>
                                <ul>
                                    <li>@Model.MobileNumber</li>
                                </ul>
                            </div>
                            <div class="single-info">
                                <i class="lni lni-envelope"></i>
                                <ul>
                                    <li><a href="@Model.EmailId">@Model.EmailId</a></li>
                                </ul>
                            </div>
                            <div class="single-info">
                                <i class="lni lni-user"></i>
                                <ul>
                                    <li>@Model.Role</></li>
                                </ul>
                            </div>
                            <div class="job-button">
                                <ul>
                                    <li>
                                        @Html.ActionLink("Edit Profile", "EditEmployerProfile", new { Model.Id }, new { @class = "btn btn-primary" })
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Employer My Profile Area -->
</body>
</html>
