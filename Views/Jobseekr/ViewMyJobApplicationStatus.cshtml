@model List<Jobseekr.Models.JobApplication>

<!DOCTYPE html>
<html class="no-js" lang="zxx">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title></title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" type="image/x-icon" href="assets/images/favicon.svg" />
</head>

<body>
    <div id="loading-area"></div>
    <!-- Start Header Area -->
    <header class="header other-page">
        <div class="navbar-area">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-expand-lg">
                            <a class="navbar-brand logo" href="/Jobseekr/AvailableJobs">
                                <img class="logo1" src="~/assets/images/logo/logo.jpg" alt="Logo" />
                            </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse"
                                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                                <ul id="nav" class="navbar-nav ml-auto">
                                    <li class="nav-item">
                                        <a href="@Url.Action("EmployeeProfile", "Jobseekr")">My Profile</a>

                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("ViewCompanyProfiles", "Jobseekr")">Compnay Profiles</a>

                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("Enquiry", "Jobseekr")">Enquiry</a>

                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("EmployeeInbox", "Jobseekr")">Inbox </a>

                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("ViewMyJobApplicationStatus", "Jobseekr")" class="active">Application Status</a>

                                    </li>
                                </ul>
                            </div>
                            <!-- navbar collapse -->
                            <div class="button">
                                <a href="@Url.Action("Logout", "Jobseekr")" data-toggle="modal" data-target="@Url.Action("Logout", "Jobseekr")" class="login">
                                    <i class="lni lni-exit"></i> Logout
                                </a>
                            </div>
                        </nav>                    
                      <!-- navbar -->
                    </div>
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
        <!-- navbar area -->
    </header>
    <!-- End Header Area -->
    <!-- Start Breadcrumbs -->
    <div class="breadcrumbs overlay">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumbs-content">
                        <h1 class="page-title">Application Status</h1>
                        <p>
                            Check your application status and stay informed about your progress.<br /> Our business plan incorporates diverse knowledge from various business disciplines, ensuring a dynamic experience.
                        </p>
                    </div>
                    <ul class="breadcrumb-nav">
                        <li><a href="/Jobseekr/AvailableJobs">Home</a></li>
                        <li>Application Status</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End Breadcrumbs -->
    <!-- Start View Employee Job Application Status Section -->
    <section class="find-job section">
        <div class="container">
            <div class="single-head">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-6 col-12">
                            <div class="single-job">
                                <div class="job-content">
                                    @*<h4>
                                        @Html.DisplayFor(modelItem => item.JobId)
                                    </h4>*@
                                    <h5>
                                        <span class="label">Name:</span>@Html.DisplayFor(modelItem => item.ApplicantName)
                                    </h5>
                                    <br />
                                    <h5>
                                        <span class="label">Job:</span>@Html.DisplayFor(modelItem => item.JobTitle)
                                    </h5>
                                    <ul>
                                        <li><i class="lni lni-envelope"></i><a href="#">@Html.DisplayFor(modelItem => item.ApplicantEmail)</a></li>
                                        <li><i class="lni lni-link"></i> <a href="@Html.DisplayFor(modelItem => item.Resume)" target="_blank">Resume</a></li>
                                        <li><i class="lni lni-reply"></i>@Html.DisplayFor(modelItem => item.ResponseStatus)</li>
                                        @*<li><span class="label">Employee ID:</span> @Html.DisplayFor(modelItem => item.EmployeeId)</li>*@
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- Pagination -->
                <div class="row">
                    <div class="col-12">
                        <div class="pagination center">
                            <ul class="pagination-list">
                                <li><a href="#"><i class="lni lni-arrow-left"></i></a></li>
                                <li class="active"><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#"><i class="lni lni-arrow-right"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!--/ End Pagination -->
            </div>
        </div>
    </section>
    <!-- /End View Employee Job Application Status Section -->
</body>
</html>
