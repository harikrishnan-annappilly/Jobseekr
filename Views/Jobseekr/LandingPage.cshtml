
@{
    ViewBag.Title = "LandingPage";
}

<h2>LandingPage</h2>

<!DOCTYPE html>
<html>
<head>
    <title>Home Page</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container text-center mt-5">
        <h2>Welcome</h2>
        <p>Please choose an option:</p>

        <div class="row">
            <div class="col-md-6">
                <a href="@Url.Action("Login", "Jobseekr")" class="btn btn-primary btn-lg btn-block">Login</a>
            </div>
            <div class="col-md-6">
                <a href="@Url.Action("Registration", "Jobseekr")" class="btn btn-success btn-lg btn-block">Register</a>
            </div>
            <div class="col-md-12 mt-3">
                <a href="@Url.Action("EmployerRegistration", "Jobseekr")" class="btn btn-warning btn-lg btn-block">Employer? Register Here!</a>
            </div>
        </div>

    </div>

    
</body>
