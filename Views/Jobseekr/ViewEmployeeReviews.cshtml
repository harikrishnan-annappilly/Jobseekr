@model List<Jobseekr.Models.Review>

@{
    ViewBag.Title = "Employee Reviews";
}


<!DOCTYPE html>
<html class="no-js" lang="zxx">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title></title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" type="image/x-icon" href="assets/images/favicon.svg" />
</head>

<body>
    <div id="loading-area"></div>
    <!-- Start Header Area -->
    <header class="header other-page">
        <div class="navbar-area">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-expand-lg">
                            <a class="navbar-brand logo" href="/Jobseekr/WelcomePage">
                                <img class="logo1" src="~/assets/images/logo/logo.jpg" alt="Logo" />
                            </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse"
                                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                                <ul id="nav" class="navbar-nav ml-auto">
                                    <li class="nav-item">
                                        <a href="@Url.Action("Create", "Jobseekr")">Post Job</a>

                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("EmployerProfile", "Jobseekr")">My Profile</a>

                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("ViewProfile", "Jobseekr")">My Companies</a>

                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("AllCompanyProfiles", "Jobseekr")">All Companies</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href=@Url.Action("ViewJobApplications", "Jobseekr")>Job Applications</a>

                                    </li>
                                    <li class="nav-item">
                                        <a href=@Url.Action("ViewEmployeeReviews", "Jobseekr") class="active">Employee Reviews</a>

                                    </li>

                                </ul>
                            </div>
                            <!-- navbar collapse -->
                            <div class="button">
                                <a href="@Url.Action("Logout", "Jobseekr")" data-toggle="modal" data-target="@Url.Action("Logout", "Jobseekr")" class="login">
                                    <i class="lni lni-exit"></i> Logout
                                </a>
                            </div>
                        </nav>
                        <!-- navbar -->
                    </div>
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
        <!-- navbar area -->
    </header>
    <!-- End Header Area -->
    <!-- Start Breadcrumbs -->
    <div class="breadcrumbs overlay">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumbs-content">
                        <h1 class="page-title">Employee Reviews</h1>
                        <p>
                            Check out reviews related to the job postings you've made.
                        </p>
                    </div>
                    <ul class="breadcrumb-nav">
                        <li><a href="/Jobseekr/WelcomePage">Home</a></li>
                        <li>Employee Reviews</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End Breadcrumbs -->
    <!-- Start View Employee Reviews for Employer Section -->
    <section class="find-job section">
        <div class="container">
            <div class="single-head">
                <div class="row">
                    @helper RenderStarRating(int rating)
                    {
                        <div class="star-rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= rating)
                                {
                                    <i class="lni lni-star-filled"></i>
                                }
                                else
                                {
                                    <i class="lni lni-star"></i>
                                }
                            }
                        </div>
                    }

                    @foreach (var item in Model)
                    {
                        <div class="col-lg-6 col-12">
                            <div class="single-job">
                                <div class="job-image">
                                    <img src="~/assets/images/logo/review.png" alt="Review logo" style="width: 50px; height: 50px;">
                                </div>
                                <div class="job-content">
                                    <h5>
                                        Job ID: @Html.DisplayFor(modelItem => item.JobId)
                                    </h5>
                                    <br />
                                    <h5>
                                        Employee ID: @Html.DisplayFor(modelItem => item.EmployeeId)
                                    </h5>
                                    <ul>
                                        Rating:
                                        <li><i class="lni lni"></i> @RenderStarRating(item.Rating)</li>
                                    </ul>
                                    <br />
                                    <h5>
                                        Comment: @Html.DisplayFor(modelItem => item.Comment)
                                    </h5>
                                </div>
                            </div>
                        </div>
                    }

                </div>
                <!-- Pagination -->
                <div class="row">
                    <div class="col-12">
                        <div class="pagination center">
                            <ul class="pagination-list">
                                <li><a href="#"><i class="lni lni-arrow-left"></i></a></li>
                                <li class="active"><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#"><i class="lni lni-arrow-right"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!--/ End Pagination -->
            </div>
        </div>
    </section>
    <!-- End View Employee Reviews for Employer Section -->
</body>
</html>