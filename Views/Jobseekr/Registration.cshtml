@model Jobseekr.Models.EmployeeRegistration

@{
    ViewBag.Title = "Registration Page";
}

<h2>Registration</h2>

@using (Html.BeginForm("Registration", "Jobseekr", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

